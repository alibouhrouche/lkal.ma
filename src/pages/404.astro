---
import LoginButton from "@/components/board/login-button";
import { SyncStatus } from "@/components/sync-status";
import { Logo } from "@/components/logo";
import { ModeToggle } from "@/components/mode-toggle";
import { buttonVariants } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
import { ArrowLeft } from "lucide-react";
---
<Layout title="404 Not Found">
    <div class="flex flex-col h-full">
      <div class="relative w-full h-16 bg-card flex items-center p-4 justify-between">
        <div class="flex gap-4 items-center">
          <a href="/">
            <Logo />
          </a>
        </div>
        <div class="sm:absolute sm:left-1/2 transform sm:-translate-x-1/2">
          <SyncStatus client:only />
        </div>
        <div class="flex gap-4 items-center">
          <ModeToggle />
          <LoginButton client:only />
        </div>
      </div>
      <div class="flex flex-col items-center justify-center h-full space-y-4">
        <h1 class="text-4xl font-bold">404 Not Found</h1>
        <p>Sorry, the page you are looking for does not exist.</p>
        <a
          class={buttonVariants({
            variant: "link",
          })}
          href="/"
        >
          <ArrowLeft className="size-6" />
          Go home
        </a>
      </div>
    </div>
</Layout>
